# @autor Oleksandr Nykytin

# какие образы используются для создания контейнера
FROM node:16.14.2

# создадим и назначим рабочую папку
WORKDIR /usr/src/app

# скопировать файл зависимостей в рабочую папку
COPY package*.json ./

# запустить код на стороне сервера
RUN npm install

# скопировать в рабочую папку весь проект
COPY . .

# октрыть порт для работы
EXPOSE $PORT

#запустить сервер
CMD["node", "./bin/www"]
